<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:id="@+id/dialogAddPerdosa_buttonCancelar"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" android:layout_toStartOf="@+id/dialogAddPerdosa_buttonAgregar"
        android:background="@null" android:text="@string/persona_dialogCancelar" android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:textColor="@color/accent"/>
    <Button
        android:id="@+id/dialogAddPerdosa_buttonAgregar"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
        android:background="@null" android:text="@string/persona_dialogAdd" android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/accent"/>

    <LinearLayout
        android:id="@+id/textView" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" android:layout_marginBottom="56dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

                <android.support.design.widget.TextInputLayout android:id="@+id/dialogAddPerdosa_textInputCorreo" android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">

                    <EditText android:id="@+id/edplaca" android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="Placa" android:inputType="text" android:maxLength="50"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/edMarcaw" android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">

                    <EditText android:id="@+id/edMarca" android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="Marca" android:inputType="textPersonName" android:maxLength="50"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/Color"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">

                    <EditText android:id="@+id/color" android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="Color" android:inputType="text" android:maxLength="50"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:id="@+id/anio"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">

                    <EditText android:id="@+id/edanio" android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="AÃ±o" android:inputType="number" android:maxLength="50"/>
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</RelativeLayout>